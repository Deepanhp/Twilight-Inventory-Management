<div class="low-stock-carousel-section">
  <h2 class="carousel-heading">⚠️ Low Stock Items ⚠️</h2>
  <div class="low-stock-carousel-container">
    <button class="carousel-arrow left-arrow" onclick="moveCarousel(-1)">&#9665;</button>
    <div class="low-stock-carousel-wrapper">
      <div class="low-stock-carousel" id="lowStockCarousel">
        <% @low_stock_subcategories.each_with_index do |(subcategory, items), index| %>
          <div class="carousel-card <%= 'active' if index == 1 %>">
            <h4 class="category-title"><%= subcategory %></h4>
            <% items.each do |item| %>
              <p class="blinker animated-alert">
                <i class="fa fa-exclamation-circle"></i> 
                <strong><%= item[:measurement]&.values&.first %> <%= item[:measurement]&.keys&.first %></strong>  
                is running low! (Remaining: <%= item[:total_remaining_quantity] %>)
              </p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <button class="carousel-arrow right-arrow" onclick="moveCarousel(1)">&#9655;</button>
  </div>
</div>

<style>
.low-stock-carousel-section {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  padding: 20px 0;
  text-align: center;
  border-radius: 10px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  margin-bottom: 10px;
}

.carousel-heading {
  font-size: 26px;
  font-weight: bold;
  color: #0d47a1;
  margin-bottom: 20px;
  text-transform: uppercase;
}

.low-stock-carousel-container {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 85%;
  margin: auto;
  padding: 20px 0;
}

.low-stock-carousel-wrapper {
  width: 65%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 25px;
  background: #ffffff;
  border-radius: 15px;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
  position: relative;
  min-height: 220px;
}

.low-stock-carousel {
  display: flex;
  gap: 25px;
  transition: transform 0.6s ease-in-out;
  justify-content: center;
  align-items: center;
  min-width: 100%;
}

.carousel-card {
  flex: 0 0 30%;
  padding: 20px;
  border-radius: 15px;
  background: #ffffff;
  opacity: 0.9;
  transition: transform 0.5s ease-in-out, opacity 0.5s;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
  text-align: center;
  font-family: 'Arial', sans-serif;
  transform: scale(1);
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 260px;
  color: #0d47a1;
}

.carousel-card.active {
  transform: scale(1.1);
  opacity: 1;
  background: #e3f2fd;
  color: #0d47a1;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  border: 3px solid #0d47a1;
}

.carousel-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: #0d47a1;
  color: white;
  border: none;
  padding: 18px;
  font-size: 28px;
  cursor: pointer;
  border-radius: 50%;
  transition: background 0.3s, transform 0.2s;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.carousel-arrow:hover {
  background: #1565c0;
  transform: scale(1.1);
}

.left-arrow {
  left: -70px;
}

.right-arrow {
  right: -70px;
}
</style>

<script>
let currentIndex = 1;
function moveCarousel(direction) {
  const carousel = document.getElementById("lowStockCarousel");
  const cards = document.querySelectorAll(".carousel-card");
  if (cards.length === 0) return;
  
  if (cards.length <= 3) {
    const activeCard = document.querySelector(".carousel-card.active");
    if (activeCard) activeCard.classList.remove("active");
    
    currentIndex += direction;
    if (currentIndex >= cards.length) currentIndex = 0;
    if (currentIndex < 0) currentIndex = cards.length - 1;
    
    cards[currentIndex].classList.add("active");
    return;
  }
  
  currentIndex += direction;
  if (currentIndex >= cards.length) currentIndex = 0;
  if (currentIndex < 0) currentIndex = cards.length - 1;
  
  const activeCard = document.querySelector(".carousel-card.active");
  if (activeCard) activeCard.classList.remove("active");
  
  cards[currentIndex].classList.add("active");
  
  const offset = -currentIndex * (100 / 3) + "%";
  carousel.style.transform = `translateX(${offset})`;
}

setInterval(() => moveCarousel(1), 3000);
</script>
